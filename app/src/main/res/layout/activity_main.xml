<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fju.mid2.MainActivity">

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Func1"
        android:text="功能1"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="100dp" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Func2"
        android:text="功能2"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/b1"
        android:layout_marginLeft="-7dp"
        app:layout_constraintLeft_toLeftOf="@+id/b1" />

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Func3"
        android:text="功能3"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/b2"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="@+id/b2" />

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Func4"
        android:text="功能4"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/b3"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/b3" />

    <Button
        android:id="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="32dp"
        android:onClick="Func8"
        android:text="功能8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/b4"
        app:layout_constraintRight_toRightOf="@+id/b7"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Func5"
        android:text="功能5"
        tools:layout_editor_absoluteY="100dp"
        app:layout_constraintLeft_toRightOf="@+id/b1"
        android:layout_marginLeft="32dp" />

    <Button
        android:id="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Func6"
        android:text="功能6"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/b5"
        app:layout_constraintLeft_toRightOf="@+id/b2"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/b5"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Func7"
        android:text="功能7"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/b6"
        app:layout_constraintLeft_toRightOf="@+id/b3"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/b6"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
